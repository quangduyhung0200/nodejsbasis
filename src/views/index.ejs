<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<body>


    <div class="topnav">
        <a class="active" href="/">Home</a>
        <a href="/uploadfile">uploadfile</a>

    </div>

    <div>


    </div>
    <div class="w3-container">
        <h2>list user</h2>

        <table class="w3-table-all w3-hoverable">
            <thead>
                <tr class="w3-light-grey">
                    <th>ID</th>
                    <th>fistName</th>
                    <th>lastName</th>
                    <th>email</th>
                    <th>address</th>
                    <th>action</th>
                </tr>
            </thead>
            <tbody>
                <% for(let i=0; i < dataUser.length; i++) { %>
                    <tr>
                        <td>
                            <%= dataUser[i].id %>
                        </td>
                        <td>
                            <%= dataUser[i].fistName %>
                        </td>
                        <td>
                            <%= dataUser[i].lastName %>
                        </td>
                        <td>
                            <%= dataUser[i].email %>
                        </td>
                        <td>
                            <%= dataUser[i].address %>
                        </td>
                        <td>
                            <a href="/detail/user/<%= dataUser[i].id %>" target="_blank">detail</a>

                            <form action="/edit-user/<%= dataUser[i].id %>" method="GET">
                                <input type="text" hidden value="<%= dataUser[i].id %>" name="userIddelete">
                                <button type="submit">edit</button>
                            </form>




                            <form action="/delete-user" method="POST">
                                <input type="text" hidden value="<%= dataUser[i].id %>" name="userIddelete">
                                <button type="submit">delete</button>
                            </form>
                        </td>
                    </tr>
                    <% } %>
            </tbody>



        </table>
        <div class="create-user-container">
            <form action="./create" method="POST">
                <div>
                    create user:
                </div>
                <div>
                    <label>frist name</label>
                    <input type="text" name="fistname">
                </div>
                <div>
                    <label>last name</label>
                    <input type="text" name="lastname">
                </div>
                <div>
                    <label>email name</label>
                    <input type="email" name="email">
                </div>
                <div>
                    <label>address</label>
                    <input type="text" name="address">
                </div>
                <div>
                    <button type="submit" class="btn-submid">submid</button>
                </div>

        </div>
        </form>

    </div>
</body>

</html>